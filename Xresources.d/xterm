xft:Mononoki:style=Regular, \
xft:JetBrains Mono:style=Regular, \
xft:Ubuntu Mono:style=Regular

XTerm*VT100*faceSize : 14
XTerm*VT100*faceSize1: 12
XTerm*VT100*faceSize2: 13
