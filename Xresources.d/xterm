! Xresources.d/XTerm: XTerm resources

! Term
XTerm*termName: xterm-256color
XTerm*ttyModes: erase ^? start ^- stop ^-

! Window
XTerm*allowWindowOps: true
XTerm*signalInhibit: true
XTerm*tekInhibit: true

! Locale
XTerm*utf8: true
XTerm*utf8Title: true

! Keyboard
XTerm*backarrowKey: false
XTerm*metaSendsEscape: true
XTerm*altIsNotMeta: true
XTerm*altSendsEscape: true

! 8-Bit
XTerm*eightBitControl: false
XTerm*eightBitInput: true
XTerm*eightBitOutput: true
XTerm*eightBitMeta: false

! Selections
XTerm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48
XTerm*on2Clicks: regex [[:alpha:]]+:\/\/([[:alnum:]!#+,./=?@_~-]|(%[[:xdigit:]][[:xdigit:]]))+
XTerm*on3Clicks: word
XTerm*on4Clicks: line
XTerm*on5Clicks: group

! Clipboard
XTerm*cutNewline: false
XTerm*selectToClipboard: false
XTerm*trimSelection: true

! Video
XTerm*VT100*colorMode: true
XTerm*VT100*colorAttrMode: true
