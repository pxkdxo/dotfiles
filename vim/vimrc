  if (has('linebreak'))
    autocmd rc FileType markdown
          \ silent! setlocal cc= nonu nornu wrap lbr bri
  else
    autocmd rc FileType markdown
          \ silent! setlocal cc= nonu nornu wrap
  endif
endif


